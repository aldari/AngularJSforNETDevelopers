<div class="container" ng-init="cources = @Model">
    <div class="row">
        <div class="span10">
            <table class="table table-condensed table-hover">
                <tr>
                    <th>Cource</th>
                    <th>Cource Name</th>
                    <th>Instructor</th>
                </tr>
                <tr ng-repeat="course in cources">
                    <td>{{course.number}}</td>
                    <td>{{course.name}}</td>
                    <td>{{course.instructor}}</td>
                </tr>
            </table>
        </div>
    </div>
</div>